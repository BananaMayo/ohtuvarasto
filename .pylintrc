[MASTER]

ignore=tests,index.py
load-plugins=pylint.extensions.mccabe
too-complex = 3

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring

[FORMAT]
max-line-length=80
[REFACTORING]
too-many-nested-blocks=2
[DESIGN]
max-statements=15